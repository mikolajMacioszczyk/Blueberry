<UserControl x:Class="Blueberry.WPF.UserControls.EmployeeControls.EmployeeTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Blueberry.WPF.UserControls.EmployeeControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Border
        Padding="{Binding Path=Padding}" Margin="10" 
        CornerRadius="5"
        BorderThickness="{Binding Path=Thickness}"
        BorderBrush="{Binding Path=Brush}">
        <UserControl Content="{Binding Content}" />
    </Border>
</UserControl>
